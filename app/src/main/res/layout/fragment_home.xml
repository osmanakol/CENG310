<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:onClick="onClick"
    android:paddingRight="2dp"
    tools:context="com.group6.stage5_computer_prototype.ui.home.HomeFragment">

    <EditText
        android:id="@+id/home_search"
        android:layout_width="352dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/border_layout"
        android:drawableLeft="@drawable/i_search2"
        android:drawableRight="@drawable/i_mic"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/home_viewpager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/home_viewpager"
        android:layout_width="351dp"
        android:layout_height="165dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/border_layout"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="349dp"
        android:layout_height="390dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_viewpager">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/home_image_one"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:foreground="@drawable/imageview_radius"
                android:onClick="onClick"
                android:scaleType="fitXY"
                tools:src="@tools:sample/backgrounds/scenic" />


            <ImageView
                android:id="@+id/home_image_two"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:foreground="@drawable/imageview_radius"
                android:onClick="onClick"
                android:scaleType="fitXY"
                tools:src="@tools:sample/backgrounds/scenic" />


            <ImageView
                android:id="@+id/home_image_three"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:foreground="@drawable/imageview_radius"
                android:onClick="onClick"
                android:scaleType="fitXY"
                tools:src="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/home_image_four"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_layout"
                android:foreground="@drawable/imageview_radius"
                android:onClick="onClick"
                android:scaleType="fitXY"
                tools:src="@tools:sample/backgrounds/scenic" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>